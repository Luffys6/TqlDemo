<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include
        android:id="@+id/activity_bit_error_title"
        layout="@layout/layout_title"/>

    <androidx.recyclerview.widget.RecyclerView
        android:background="#f2f2f2"
        android:id="@+id/activity_bit_error_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:background="@color/white"
        android:textColor="#000"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_10"
        android:id="@+id/activity_bit_error_probability_tv"
        android:minLines="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/activity_bit_error_btn_layout"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/activity_bit_error_set_btn"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="80dp"
            android:text="@string/set_error_bit"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/activity_bit_error_clear_btn"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="80dp"
            android:text="@string/clear_error_bit"
            android:layout_height="50dp"/>

    </LinearLayout>



</LinearLayout>