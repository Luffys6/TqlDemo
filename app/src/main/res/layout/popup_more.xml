                app:text_margin="5dp" />
            <Switch
                android:id="@+id/sw_draw_stroke"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="#9AA0A6"
                android:textSize="14dp" />
        </LinearLayout>
