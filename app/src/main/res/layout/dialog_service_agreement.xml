<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@drawable/bg_dialog_agreement"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
          <ImageView
              android:id="@+id/tv_cancel"
              android:layout_width="15dp"
              android:layout_height="15dp"
             android:background="@drawable/close1"
              android:layout_alignParentRight="true"
              android:layout_margin="@dimen/dp_10"
             android:padding="@dimen/dp_10"/>

            <TextView
                android:id="@+id/tv_title"
                android:textSize="16dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/service_title"
                />

            <TextView
                android:id="@+id/tv_msg"
                android:layout_margin="20dp"
                android:textSize="14dp"
                android:padding="3dp"
                android:letterSpacing = "0.05"
                android:lineSpacingExtra = "2sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/black"
                android:layout_below="@id/tv_title"

                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/tip_dialog_default_color"
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/service_no"
                android:textSize="14sp" />
            <View
                android:id="@+id/views"
                android:layout_width="0.5dp"
                android:background="@color/gray"
                android:layout_height="match_parent"/>
            <TextView
                android:textColor="@color/tip_dialog_default_color"
                android:id="@+id/tv_confirm_agree"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/service_agree"
                android:textSize="14sp" />
        </LinearLayout>
</LinearLayout>